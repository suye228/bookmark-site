            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="搜索资源...">
            </div>
        </header>
        
        <div class="categories">
            <!-- 视频号板块 -->
            <div class="category">
                <div class="category-header">
                    <div class="category-icon video-icon">
                        <i class="fas fa-video"></i>
                    </div>
                    <h2 class="category-title">视频号 <span class="category-badge">2个资源</span></h2>
                </div>
                <div class="links">
                    <a href="https://scys.com/articleDetail/xq_topic/5125221225215144" class="link-item video" target="_blank">
                        <div class="link-icon">
                            <i class="fas fa-play-circle"></i>
                        </div>
                        <div class="link-text">
                            <div class="link-title">视频号专题一</div>
                            <div class="link-url">scys.com/articleDetail/xq_topic/5125221225215144</div>
                        </div>
                    </a>
                    <a href="https://scys.com/articleDetail/xq_topic/8852585514241522" class="link-item video" target="_blank">
                        <div class="link-icon">
                            <i class="fas fa-film"></i>
                        </div>
                        <div class="link-text">
                            <div class="link-title">视频号专题二</div>
                            <div class="link-url">scys.com/articleDetail/xq_topic/8852585514241522</div>
                        </div>
                    </a>
                </div>
            </div>
            
            <!-- 小红书板块 -->
            <div class="category">
                <div class="category-header">
                    <div class="category-icon redbook-icon">
                        <i class="fab fa-reddit-alien"></i>
                    </div>
                    <h2 class="category-title">小红书 <span class="category-badge">2个资源</span></h2>
                </div>
                <div class="links">
                    <a href="https://scys.com/articleDetail/xq_topic/4845285412458488" class="link-item redbook" target="_blank">
                        <div class="link-icon">
                            <i class="fas fa-book-open"></i>
                        </div>
                        <div class="link-text">
                            <div class="link-title">小红书专题一</div>
                            <div class="link-url">scys.com/articleDetail/xq_topic/4845285412458488</div>
                        </div>
                    </a>
                    <a href="https://scys.com/articleDetail/xq_topic/2852482521544541" class="link-item redbook" target="_blank">
                        <div class="link-icon">
                            <i class="fas fa-pen-fancy"></i>
                        </div>
                        <div class="link-text">
                            <div class="link-title">小红书专题二</div>
                            <div class="link-url">scys.com/articleDetail/xq_topic/2852482521544541</div>
                        </div>
                    </a>
                </div>
            </div>
            
            <!-- 出海板块 -->
            <div class="category">
                <div class="category-header">
                    <div class="category-icon overseas-icon">
                        <i class="fas fa-ship"></i>
                    </div>
                    <h2 class="category-title">出海 <span class="category-badge">2个资源</span></h2>
                </div>
                <div class="links">
                    <a href="https://scys.com/articleDetail/xq_topic/1524155888225442" class="link-item overseas" target="_blank">
                        <div class="link-icon">
                            <i class="fas fa-globe-americas"></i>
                        </div>
                        <div class="link-text">
                            <div class="link-title">出海专题一</div>
                            <div class="link-url">scys.com/articleDetail/xq_topic/1524155888225442</div>
                        </div>
                    </a>
                    <a href="https://scys.com/articleDetail/xq_topic/8852488228128112" class="link-item overseas" target="_blank">
                        <div class="link-icon">
                            <i class="fas fa-anchor"></i>
                        </div>
                        <div class="link-text">
                            <div class="link-title">出海专题二</div>
                            <div class="link-url">scys.com/articleDetail/xq_topic/8852488228128112</div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        
        <footer>
            <p>© 2023 资源导航站 | 一站式资源访问平台 | 共6个优质资源</p>
        </footer>
    </div>

    <script>
        // 搜索功能实现
        document.querySelector('.search-box input').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const links = document.querySelectorAll('.link-item');
            
            links.forEach(link => {
                const title = link.querySelector('.link-title').textContent.toLowerCase();
                const url = link.querySelector('.link-url').textContent.toLowerCase();
                
                if (title.includes(searchTerm) || url.includes(searchTerm)) {
                    link.style.display = 'flex';
                } else {
                    link.style.display = 'none';
                }
            });
        });
        
        // 添加点击动画效果
        document.querySelectorAll('.link-item').forEach(item => {
            item.addEventListener('click', function() {
                this.style.transform = 'scale(0.98)';
                setTimeout(() => {
                    this.style.transform = '';
                }, 200);
            });
        });
        
        // 添加分类提示
        const categories = document.querySelectorAll('.category');
        categories.forEach(category => {
            category.addEventListener('click', function(e) {
                if (e.target.classList.contains('category-title')) {
                    const title = this.querySelector('.category-title').textContent;
                    alert(`您选择了${title}分类，共2个资源`);
                }
            });
        });
    </script>
</body>
</html>
